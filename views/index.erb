<a class="button" href="/search">Search</a>

<div class="content">
  <h2><mark style="background-color: #18396A; color: white;">Top 5 news in the UK</mark></h2>
  <!-- Iterating through the articles and rendering a card for each -->
  <% @top_5.each do |article| %>
    <a href="<%= "#{article['url']}" %> " target="_blank">
      <div class="card">
        <!-- If the article doesn't have an image -->
        <% if article['urlToImage'] %>
          <% image_url = article['urlToImage'] %>
        <% else %>
          <% image_url = 'images/news-background.jpg' %>
        <% end %>
        <img src=<%= "#{article['urlToImage']}" %> />
        <div class="card-info">
          <div>
            <h2><%= "#{article['title'].split('-')[0]}" %></h2>
            <p><%= "#{article['description']}" %></p>
          </div>
        </div>
      </div>
    </a>
  <% end %>
</div>





